<%- include("../default/header")%>
<div class="content wrap">
    <table border="1" style="width:100%;">
        <thead>
            <tr>
                <th>작성 번호</th><th>작성자</th><th>제목</th><th>날짜</th><th>조회수</th>
            </tr>
        </thead>
        <tbody>
            <% if(list.length === 0) {%>
            <tr colspan="5">
                    <td>
                        등록된 글이 없습니다.
                    </td>
            </tr>
            <%} else {
                list.forEach((data) => {%>
                    <tr>
                        <td><%=data.WRITE_NO%></td>
                        <td><%=data.ID%></td>
                        <td><%=data.TITLE%></td>
                        <td><%=data.SAVE_DATE%></td>
                        <td><%=data.HIT%></td>
                    </tr>
            <% }) 
            }%>
            <tr>
                <td colspan="5" align="right">
                    <a href="/board/write_form">글 등록</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>